# Base URL para API backend
VITE_API_BASE_URL=https://api.example.com

# Flags de features (opcional)
VITE_FEATURE_SKILLS=true

# --- MODO DEMO (solo desarrollo) ---
# Si es 'true' y no es build de producción, el login se valida localmente.
VITE_USE_FAKE_AUTH=false
VITE_USE_FAKE_API=false

# Credenciales demo por defecto (se pueden cambiar)
VITE_DEMO_EMAIL=admin@demo.com
VITE_DEMO_PASSWORD=Admin123!

# Permitir cualquier combinación email/contraseña en demo
VITE_DEMO_ALLOW_ANY=false
